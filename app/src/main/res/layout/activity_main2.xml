                            android:drawableStart="@drawable/ic_baseline_trending_up_24"
                            android:elevation="3dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:text="Popular"
                            android:textColor="#242222" />
                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
