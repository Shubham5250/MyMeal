                    android:paddingStart="4dp"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginEnd="14dp"
                    android:scrollbars="none"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/filter_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/filter_bg"
                            android:drawableEnd="@drawable/ic_baseline_filter_list_24"
                            android:elevation="3dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Filters"
                            android:textColor="#242222" />


                        <TextView
                            android:id="@+id/textView49"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/filter_bg"
                            android:drawableStart="@drawable/ic_baseline_discount_24"
                            android:elevation="3dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:text="Offers"
                            android:textColor="#242222" />

                        <TextView
                            android:id="@+id/restaurants_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/filter_bg"
                            android:elevation="3dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="Restaurants"
                            android:textColor="#242222" />

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/filter_bg"
                            android:elevation="3dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:text="5 star"
                            android:textColor="#242222" />

                        <TextView
                            android:id="@+id/textView45"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/filter_bg"
                            android:drawableStart="@drawable/ic_baseline_delivery_dining_24"
                            android:elevation="2dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:text="Pickup"
                            android:textColor="#242222" />

                        <TextView
                            android:id="@+id/textView46"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/filter_bg"
                            android:drawableStart="@drawable/ic_baseline_location_on_24"
                            android:elevation="3dp"
                            android:fontFamily="@font/roboto_medium"
                            android:padding="6dp"
                            android:text="Near you"
                            android:textColor="#242222" />


                        <TextView
                            android:id="@+id/textView48"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="1"
